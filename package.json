{
  "name": "nodewatch",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "start": "tsx src/index.ts",
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "webpack --mode=production",
    "build:backend": "npm run generate:convex && tsc --skipLibCheck --noImplicitAny false",
    "generate:convex": "echo 'Using fallback Convex API for Railway deployment'",
    "build:vercel": "npm run build:frontend",
    "start:production": "node dist/index.js",
    "railway:build": "npm ci && npm run build:backend",
    "worker:production": "node dist/worker.js",
    "dev:frontend": "webpack serve --mode=development",
    "dev:full": "npm run build && npm run dev",
    "test": "jest",
    "test:watch": "jest --watch",
    "worker": "tsx src/worker.ts",
    "worker:dev": "tsx watch src/worker.ts",
    "dev:all": "node scripts/simple-dev.js",
    "dev:no-docker": "node scripts/dev-no-docker.js",
    "dev:advanced": "node scripts/dev.js",
    "dev:quick": "node scripts/quick-start.js",
    "dev:shell": "./scripts/dev-start.sh",
    "dev:services": "npm run dev:redis && npm run dev:convex",
    "dev:redis": "docker run -d --name nodewatch-redis -p 6379:6379 redis:7-alpine redis-server --appendonly yes --maxmemory 256mb || echo 'Redis already running'",
    "dev:check": "node scripts/check-system.js",
    "dev:convex": "npx convex dev",
    "dev:stop": "./scripts/dev-stop.sh",
    "logs": "tail -f logs/*.log",
    "docker:build": "docker-compose build",
    "docker:dev": "docker-compose -f docker-compose.dev.yml up -d",
    "docker:prod": "./scripts/deploy.sh",
    "docker:stop": "./scripts/deploy.sh stop",
    "docker:logs": "./scripts/deploy.sh logs",
    "docker:clean": "./scripts/deploy.sh clean",
    "deploy:vercel": "vercel --prod",
    "deploy:railway": "railway up",
    "deploy:convex": "npx convex deploy",
    "deploy:production": "node scripts/deploy-production.js",
    "deploy:all": "npm run deploy:convex && npm run deploy:railway && npm run deploy:vercel"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/node": "^24.3.3",
    "@types/node-fetch": "^2.6.13",
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "@types/react-router-dom": "^5.3.3",
    "@types/socket.io-client": "^1.4.36",
    "@types/tar": "^6.1.13",
    "@types/ws": "^8.18.1",
    "axios": "^1.12.1",
    "bullmq": "^5.15.0",
    "convex": "^1.27.0",
    "cors": "^2.8.5",
    "dockerode": "^4.0.2",
    "dotenv": "^17.2.2",
    "express": "^5.1.0",
    "ioredis": "^5.4.1",
    "node-fetch": "^3.3.2",
    "openai": "^4.67.3",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-router-dom": "^7.9.1",
    "redis": "^4.7.0",
    "semgrep": "^0.0.1",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1",
    "tar": "^7.4.3",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@types/dockerode": "^3.3.31",
    "@types/jest": "^29.5.14",
    "@types/pg": "^8.15.5",
    "css-loader": "^7.1.2",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^5.6.4",
    "jest": "^29.7.0",
    "style-loader": "^4.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.4",
    "webpack": "^5.101.3",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.2"
  }
}
