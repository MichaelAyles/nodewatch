{
  "name": "nodewatch",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "start": "tsx src/index.ts",
    "build": "tsc",
    "build:frontend": "mkdir -p frontend/dist && cp src/frontend/* frontend/dist/ 2>/dev/null || echo 'No frontend files to copy'",
    "test": "jest",
    "test:watch": "jest --watch",
    "worker": "tsx src/worker.ts",
    "worker:dev": "tsx watch src/worker.ts",
    "dev:all": "node scripts/dev.js",
    "dev:quick": "node scripts/quick-start.js",
    "dev:shell": "./scripts/dev-start.sh",
    "dev:services": "npm run dev:redis && npm run dev:convex",
    "dev:redis": "docker run -d --name nodewatch-redis -p 6379:6379 redis:7-alpine redis-server --appendonly yes --maxmemory 256mb || echo 'Redis already running'",
    "dev:convex": "npx convex dev",
    "dev:stop": "./scripts/dev-stop.sh",
    "logs": "tail -f logs/*.log",
    "docker:build": "docker-compose build",
    "docker:dev": "docker-compose -f docker-compose.dev.yml up -d",
    "docker:prod": "./scripts/deploy.sh",
    "docker:stop": "./scripts/deploy.sh stop",
    "docker:logs": "./scripts/deploy.sh logs",
    "docker:clean": "./scripts/deploy.sh clean"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/node": "^24.3.3",
    "@types/node-fetch": "^2.6.13",
    "@types/tar": "^6.1.13",
    "axios": "^1.12.1",
    "bullmq": "^5.15.0",
    "convex": "^1.27.0",
    "cors": "^2.8.5",
    "dockerode": "^4.0.2",
    "dotenv": "^17.2.2",
    "express": "^5.1.0",
    "ioredis": "^5.4.1",
    "node-fetch": "^3.3.2",
    "openai": "^4.67.3",
    "redis": "^4.7.0",
    "semgrep": "^0.0.1",
    "tar": "^7.4.3",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2"
  },
  "devDependencies": {
    "@types/dockerode": "^3.3.31",
    "@types/jest": "^29.5.14",
    "@types/pg": "^8.15.5",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5"
  }
}
