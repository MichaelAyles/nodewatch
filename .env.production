# Production Environment Variables Template
# Copy this to .env.local and fill in your values

# Convex Database (from Convex dashboard)
CONVEX_URL=https://your-deployment.convex.cloud
CONVEX_DEPLOYMENT=your-deployment-name

# Railway Redis (automatically provided by Railway)
REDIS_URL=redis://default:password@host:port

# OpenRouter API (for LLM analysis)
OPENROUTER_API_KEY=your_openrouter_api_key
OPENROUTER_PREFERRED_MODEL=openrouter/auto

# Cost Management
ENABLE_COST_TRACKING=true
COST_ALERT_THRESHOLD_USD=50.00
DAILY_BUDGET_USD=100.00

# Admin Dashboard
ADMIN_ENABLED=true
ADMIN_USERNAME=admin
ADMIN_PASSWORD=your_secure_password_here

# Production Settings
NODE_ENV=production
LOG_LEVEL=info
PORT=3000

# Frontend URL (Vercel deployment)
FRONTEND_URL=https://your-app.vercel.app

# Security
SESSION_SECRET=your_session_secret_here
JWT_SECRET=your_jwt_secret_here